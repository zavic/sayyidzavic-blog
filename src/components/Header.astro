---
import Logo from "./Logo.astro";

const isHome = Astro.url.pathname === "/";

const navbarLinks = [
	{ name: "About", url: isHome ? "#about" : "/#about" },
	{ name: "Projects", url: isHome ? "#projects" : "/#projects" },
	{ name: "Blog", url: isHome ? "#blog" : "/blog" },
	{ name: "Contact", url: isHome ? "#contact" : "/#contact" },
];
---

<header class="fixed w-full z-20 top-0 left-0">
	<nav class="bg-gray-800 shadow-lg border-gray-700 sticky top-0 z-20">
		<div class="max-w-6xl mx-auto px-4 py-1.5">
			<div class="flex justify-between items-center py-3">
				<!-- Logo -->
				<Logo />

				<!-- Desktop Menu -->
				<div class="hidden items-center md:flex gap-10">
					{
						navbarLinks.map((link) => (
							<a
								href={link.url}
								class="rounded-md text-sm font-medium hover:text-indigo-400"
							>
								{link.name}
							</a>
						))
					}
				</div>

				<!-- Mobile Menu Button -->
				<div class="flex md:hidden items-center">
					<button
						id="mobile-menu-button"
						class=" text-gray-300 hover:text-indigo-500 focus:outline-none focus:text-indigo-500"
					>
						<svg
							class="w-6 h-6"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M4 6h16M4 12h16M4 18h16"></path>
						</svg>
					</button>
				</div>
			</div>
		</div>
	</nav>

	<!-- Mobile Sidebar Overlay -->
	<div
		id="sidebar-overlay"
		class="fixed inset-0 bg-black/50 z-40 hidden md:hidden"
	>
	</div>

	<!-- Mobile Sidebar -->
	<div
		id="mobile-sidebar"
		class="fixed top-0 right-0 h-full p-2 w-80 bg-gray-800 shadow-2xl transform translate-x-full transition-transform duration-300 ease-in-out z-50 md:hidden"
	>
		<div class="flex flex-col h-full">
			<!-- Sidebar Menu - Scrollable Area -->
			<div
				class="flex-1 overflow-y-auto scrollbar-thin scrollbar-thumb-gray-600 scrollbar-track-gray-800 sidebar-scroll"
			>
				<!-- Sidebar Header -->
				<div
					class="flex items-center justify-between flex-shrink-0 pb-4 pt-1.5 px-1.5"
				>
					<!-- Logo -->
					<div >
						<Logo />
					</div>
					<button
						id="close-sidebar"
						class="text-gray-400 hover:text-white p-2 rounded-lg hover:bg-gray-700 transition-colors"
					>
						<svg
							class="w-6 h-6"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M6 18L18 6M6 6l12 12"></path>
						</svg>
					</button>
				</div>
				<nav class="space-y-2">
					{
						navbarLinks.map((link) => (
							<a
								href={link.url}
								class="block px-2 py-2.5 rounded-lg transition-colors text-gray-300 hover:bg-gray-700 hover:text-indigo-400"
							>
								{link.name}
							</a>
						))
					}
				</nav>
			</div>
		</div>
	</div>
</header>
